<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">TFGDevopsApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li> 
        <AuthorizeView> 
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="articlelist" Match="NavLinkMatch.Prefix">
                        <span class="oi oi-plus" aria-hidden="true"></span> Articles
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="fetchweather" Match="NavLinkMatch.Prefix">
                        <span class="oi oi-plus" aria-hidden="true"></span> Weather Forescast
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="JSInterop" Match="NavLinkMatch.Prefix">
                        <span class="oi oi-plus" aria-hidden="true"></span> JSInterop
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>        
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
