@using Radzen.Blazor
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using TFGDevopsApp.Components.Layout
@inject NavigationManager NavigationManager

<RadzenSidebar Expanded>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.jpeg" style="width: 96px; height: 96px;" AlternateText="Application logo"></RadzenImage>
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path=""/>
        </RadzenPanelMenu>
        <AuthorizeView>
            <Authorized>
                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Icon="dashboard" Text="Workspaces" Path="code/workspaces" />
                    <RadzenPanelMenuItem Icon="task" Text="Tasks" Path="task/Tasks" />
                </RadzenPanelMenu>
            </Authorized>
            <NotAuthorized>
                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Text="Login" Icon="account_circle" Path="Account/Login" />
                <RadzenPanelMenuItem Text="Register" Icon="account_balance_wallet" Path="Account/Register?returnUrl=/" />
                </RadzenPanelMenu>
            </NotAuthorized>
        </AuthorizeView>
</RadzenSidebar>