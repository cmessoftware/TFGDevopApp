@using Radzen.Blazor
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using TFGDevopsApp.Components.Layout
@inject NavigationManager NavigationManager

<RadzenSidebar Expanded>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.jpeg" style="width: 48px; height: 48px;" AlternateText="Application logo"></RadzenImage>
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path=""/>
        </RadzenPanelMenu>
        <AuthorizeView>
            <Authorized>
                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Text="Code" Icon="code" Path="">
                        <RadzenPanelMenuItem Text="Workspaces" Path="code/workspaces" />
                    </RadzenPanelMenuItem>
                    <RadzenPanelMenuItem Text="Tasks" Icon="task" Path="">
                        <RadzenPanelMenuItem Text="Task" Path="task/Tasks" />
                    </RadzenPanelMenuItem>
                </RadzenPanelMenu>
            </Authorized>
            <NotAuthorized>
                <RadzenMenu>
                    <RadzenPanelMenuItem Text="Login" Icon="account_circle" Path="Account/Login" />
                    <RadzenPanelMenuItem Text="Register" Icon="home" Path="Account/Register?returnUrl=/" />
                </RadzenMenu>
            </NotAuthorized>
        </AuthorizeView>
</RadzenSidebar>